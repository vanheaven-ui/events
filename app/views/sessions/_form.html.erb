<div class="card p-3">
  <div class="card-header p-0 mb-4">
    <h1>Sign in</h1>
    <h4>Test Sign in:</h4>
    <h6>Name: <span class="text-success">Depaul</span></h6>
  </div>  

  <%= form_with(url: '/sign_in', local: true) do |f| %>
    <div class="form-group">
      <%= f.label "name:" %>
      <%= f.text_field :name, required: true,  autofocus: true, value: "Depaul", class: "form-control mb-2" %>
    </div>

    <div class="actions">
      <%= f.submit 'Sign in' %>
    </div>
  <% end %>
</div>