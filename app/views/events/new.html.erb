<div>
  <h1>Create an Event</h1>

  <%= form_with(model: @event, local: true) do |f| %>
    <div class="form-group">
      <%= f.label "name:" %>
      <%= f.text_field :name, autofocus: true %>
    </div>

    <div class="form-group">
      <%= f.label "description:" %>
      <%= f.text_area :description %>
    </div>

    <div class="form-group">
      <%= f.label "date:" %>
      <%= f.date_field :date %>
    </div>

    <div class="form-group">
      <%= f.label "location:" %>
      <%= f.text_field :location %>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
  <%= link_to "Cancel", root_path %>
</div>