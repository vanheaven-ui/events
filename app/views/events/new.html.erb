<div class="card w-50 mx-auto mt-2">
  <div class="card-header">
    <h1 class="text-center">Create an Event</h1>
   </div> 

  <div class="card-body">
    <%= form_with(model: @event, local: true) do |f| %>
      <div class="form-group">
        <%= f.label "name:" %>
        <%= f.text_field :name, autofocus: true, placeholder: "What to call your event", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label "description:" %>
        <%= f.text_area :description, placeholder: "Event details here...", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label "date:" %>
        <%= f.date_field :date, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label "location:" %>
        <%= f.text_field :location, placeholder: "Enter location", class: "form-control" %>
      </div>

      <div class="actions mb-3">
        <%= f.submit %>
      </div>
    <% end %>
    <%= link_to "Cancel", root_path %>
  </div>
</div>