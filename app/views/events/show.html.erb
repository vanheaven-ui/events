<div class="card w-50 mx-auto">
  <p class="p-3 mb-0">
    <strong>Created By:</strong> <%= link_to @event.creator.name, user_path(current_user) %>
    on <%= @event.created_at.strftime('%a, %d-%b-%Y') %>
  </p>
  <div class="card-header text-white bg-dark d-flex justify-content-between">
    <h2>Event:- <%= @event.name %><%= render 'events/badge' %></h2>   
  </div>
  <div class="card-body">
    <h4 class="mb-2">Event Description: </h4><%= @event.description %>
    <p class="mt-3"><strong>Happening On: </strong><%= @event.date.strftime('%a, %d-%b-%Y') %></p>
    <p><strong>Location: </strong><%= @event.location%></p>

    <h4><%= pluralize(@event.event_attendees.count, "Attendee") %></h4>
    <ul>
      <% @event.event_attendees.each do |attendee| %>
        <li><%= link_to attendee.name, user_path(attendee) %></li>
      <% end %>
    </ul>

    <%= link_to 'Home', root_path %>
  </div>
</div>