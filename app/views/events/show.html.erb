<div>
  <p>Created By: <%= @event.creator.name %></p>
  <h2>Event Name: <%= @event.name %></h2>
  <p>Event Description: <br /><%= @event.description %></p>
  <p>Date: <%= @event.date %></p>
  <p>Location: <%= @event.location%></p>

  <h4><%= pluralize(@event.event_attendees.count, "Attendee") %></h4>
  <ul>
    <% @event.event_attendees.each do |attendee| %>
      <li><%= link_to attendee.name, user_path(attendee) %></li>
    <% end %>
  </ul>

  <%= link_to 'Home', root_path %>
</div>